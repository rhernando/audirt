= form_for @programa do |f|
  - if @programa.errors.any?
    #error_explanation
      %h2= "#{pluralize(@programa.errors.count, "error")} prohibited this programa from being saved:"
      %ul
        - @programa.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
