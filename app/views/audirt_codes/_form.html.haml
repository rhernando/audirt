= form_for @audirt_code do |f|
  - if @audirt_code.errors.any?
    #error_explanation
      %h2= "#{pluralize(@audirt_code.errors.count, "error")} prohibited this audirt_code from being saved:"
      %ul
        - @audirt_code.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :code
    = f.text_field :code
  .actions
    = f.submit 'Save'
